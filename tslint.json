{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "no-console": false,
    "jsx-no-lambda": false,
    "interface-name": false,
    "semicolon": true,
    "triple-equals": false,
    "object-literal-sort-keys": false,
    "variable-name": false,
    "trailing-comma": true,
    "ordered-imports": false
  }
}